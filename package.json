{
  "name": "faros",
  "description": "Modern performance testing framework powered by Lighthouse with comprehensive configuration management and flexible reporting.",
  "version": "0.0.6",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "faros": "./bin/run"
  },
  "directories": {
    "lib": "src",
    "bin": "bin"
  },
  "files": [
    "dist",
    "bin"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/richiemccoll/faros.git"
  },
  "bugs": {
    "url": "https://github.com/richiemccoll/faros/issues"
  },
  "homepage": "https://github.com/richiemccoll/faros#readme",
  "keywords": [
    "lighthouse",
    "performance",
    "testing",
    "web-performance",
    "cli",
    "automation",
    "metrics"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup-node",
    "build:watch": "tsup-node --watch",
    "clean": "rimraf dist",
    "commit": "cz",
    "commitlint": "commitlint --edit",
    "compile": "tsc",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "tsx ./bin/run.ts",
    "start:node": "node ./bin/run",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "release": "semantic-release"
  },
  "author": "Richie Mccoll",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^18.6.3",
    "@jest/globals": "^29.7.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/chrome-remote-interface": "^0.33.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/prompts": "^2.4.9",
    "@types/signale": "^1.4.7",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "semantic-release": "^25.0.2",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "tsx": "^4.21.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "chrome-launcher": "^1.2.1",
    "chrome-remote-interface": "^0.33.3",
    "consola": "^3.2.3",
    "dotenv": "^16.4.5",
    "giget": "^1.2.3",
    "lighthouse": "^13.0.1",
    "picocolors": "^1.0.1",
    "yargs": "^17.7.2",
    "zod": "^4.1.13"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
